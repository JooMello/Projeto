<%- include ("../../partials/header.ejs") %> <%- include
("../../partials/navbar.ejs") %>

<body>
<div class="container">
  <hr />
  <h2>Recebimentos</h2>
  <a class="btn btn-success" href="/admin/receipts/new">Novo Recebimento</a>
  <hr />
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Fornecedor</th>
        <th>Valor</th>
        <th>Categoria</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% receipts.forEach(receipt => { %>
      <tr href="/<%= receipt.slug %>">
        <td><%= receipt.fornecedor %></td>
        <td><%= receipt.valor %></td>
        <td><%= receipt.category.title %></td>
        <td>
          <form
            method="POST"
            action="/receipts/delete"
            style="display: inline;"
            onsubmit="confirmarDelecao(event, this)"
          >
            <input type="hidden" name="id" value="<%= receipt.id %>" />
            <button class="btn btn-danger">Deletar</button>
          </form>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>

   <div class="row">
      <div class="col col-12">
        <a style="float:right" href="/receipts/page/2">Next >>></a>
      </div>
      <hr />
    </div>

</div>

<body>

<%- include ("../../partials/footer.ejs") %>

<script>
  function confirmarDelecao(event, form) {
    event.preventDefault();
    var decision = confirm("Você quer deletar este Recebimento?");
    if (decision) {
      form.submit();
    }
  }
</script>
